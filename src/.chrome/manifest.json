{
  "manifest_version": 2,
  "name"            : "@ant-name@",
  "version"         : "@ant-version@",

  "description"   : "@ant-description@",
  "icons"         : {
    "16" : "icons/icon16.png",
    "48" : "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "author"         : "@ant-author@",
  "content_scripts": [
    {
      "matches"   : [
        "@ant-sites-chrome-list@"
      ],
      "all_frames": true,
      "run_at"    : "document_idle",
      "js"        : [
        "jquery-1.8.3.min.js",
        "autoreviewcomments.js"
      ]
    }
  ],
  "content_security_policy" : "script-src 'self'; object-src 'self'",
  "homepage_url"            : "@ant-homepage@",
  "permissions"             : [
    "activeTab",
    "@ant-sites-chrome-list@"
  ],
  "web_accessible_resources": [
    "jquery-1.8.3.min.js"
  ]
}